---
layout: default
---
{% assign lang_code = page.lang | default: site.active_lang | default: site.default_lang %}
{% assign lang_is_de = false %}
{% if lang_code == 'de' %}
  {% assign lang_is_de = true %}
{% endif %}
{% if lang_is_de %}
  {% assign resume_data = site.data.resume_de | default: site.data.resume %}
{% else %}
  {% assign resume_data = site.data.resume %}
{% endif %}

{% unless resume_data %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            {% if page.cv_pdf contains '://' %}
              href="{{ page.cv_pdf }}"
            {% else %}
              href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            {% endif %}
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
          >
            <i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% for entry in site.data.cv %}
          <a class="anchor" id="{{ entry.title }}"></a>
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">{{ entry.title }}</h3>
            <div>
              {% if entry.type == 'list' %}
                {% include cv/list.liquid %}
              {% elsif entry.type == 'map' %}
                {% include cv/map.liquid %}
              {% elsif entry.type == 'nested_list' %}
                {% include cv/nested_list.liquid %}
              {% elsif entry.type == 'time_table' %}
                {% include cv/time_table.liquid %}
              {% elsif entry.type == 'list_groups' %}
                {% include cv/list_groups.liquid %}
              {% else %}
                {{ entry.contents }}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% else %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            {% if page.cv_pdf contains '://' %}
              href="{{ page.cv_pdf }}"
            {% else %}
              href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            {% endif %}
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
          >
            <i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% for data in resume_data %}
          {% assign section_key = data[0] %}
          {% assign section_val = data[1] %}
          {% if site.jsonresume and site.jsonresume.size > 0 %}
            {% unless site.jsonresume contains section_key %}
              {% continue %}
            {% endunless %}
          {% endif %}
          {% if section_key == 'meta' or section_val.size == 0 %} {% continue %} {% endif %}
          <a class="anchor" id="{{ section_key }}"></a>
          <div class="card mt-3 p-3">
            {% if lang_is_de %}
              {% case section_key %}
                {% when 'basics' -%}
                  {%- assign heading = 'Grunddaten' %}
                {% when 'work' -%}
                  {%- assign heading = 'Berufserfahrung' %}
                {% when 'education' -%}
                  {%- assign heading = 'Ausbildung' %}
                {% when 'publications' -%}
                  {%- assign heading = 'Publikationen' %}
                {% when 'projects' -%}
                  {%- assign heading = 'Projekte' %}
                {% when 'volunteer' -%}
                  {%- assign heading = 'Ehrenamt' %}
                {% when 'awards' -%}
                  {%- assign heading = 'Auszeichnungen' %}
                {% when 'certificates' -%}
                  {%- assign heading = 'Zertifikate' %}
                {% when 'skills' -%}
                  {%- assign heading = 'FÃ¤higkeiten' %}
                {% when 'languages' -%}
                  {%- assign heading = 'Sprachen' %}
                {% when 'interests' -%}
                  {%- assign heading = 'Interessen' %}
                {% when 'references' -%}
                  {%- assign heading = 'Referenzen' %}
                {% else -%}
                  {%- assign heading = section_key | capitalize %}
              {% endcase %}
            {% else %}
              {% case section_key %}
                {% when 'basics' -%}
                  {%- assign heading = 'Basics' %}
                {% when 'work' -%}
                  {%- assign heading = 'Work' %}
                {% when 'education' -%}
                  {%- assign heading = 'Education' %}
                {% when 'publications' -%}
                  {%- assign heading = 'Publications' %}
                {% when 'projects' -%}
                  {%- assign heading = 'Projects' %}
                {% when 'volunteer' -%}
                  {%- assign heading = 'Volunteer' %}
                {% when 'awards' -%}
                  {%- assign heading = 'Awards' %}
                {% when 'certificates' -%}
                  {%- assign heading = 'Certificates' %}
                {% when 'skills' -%}
                  {%- assign heading = 'Skills' %}
                {% when 'languages' -%}
                  {%- assign heading = 'Languages' %}
                {% when 'interests' -%}
                  {%- assign heading = 'Interests' %}
                {% when 'references' -%}
                  {%- assign heading = 'References' %}
                {% else -%}
                  {%- assign heading = section_key | capitalize %}
              {% endcase %}
            {% endif %}
            <h3 class="card-title font-weight-medium">{{ heading }}</h3>
            <div>
              {% case section_key %}
                {% when 'basics' %}
                  {% include resume/basics.liquid %}
                {% when 'education' %}
                  {% include resume/education.liquid %}
                {% when 'work' %}
                  {% include resume/work.liquid %}
                {% when 'volunteer' %}
                  {% include resume/volunteer.liquid %}
                {% when 'projects' %}
                  {% include resume/projects.liquid %}
                {% when 'awards' %}
                  {% include resume/awards.liquid %}
                {% when 'skills' %}
                  {% include resume/skills.liquid %}
                {% when 'publications' %}
                  {% include resume/publications.liquid %}
                {% when 'languages' %}
                  {% include resume/languages.liquid %}
                {% when 'interests' %}
                  {% include resume/interests.liquid %}
                {% when 'certificates' %}
                  {% include resume/certificates.liquid %}
                {% when 'references' %}
                  {% include resume/references.liquid %}
                {% else %}

              {% endcase %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% endunless %}
